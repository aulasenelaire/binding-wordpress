<div class='container-fluid'>
  <div class='row'>
    <div class='col-sm-12 col-sm-6 col-md-6 col-md-offset-1'>
      <div class="row">
        {% for item in footer_menu.get_items|slice(0, 2) %}
          <ul class="col-sm-12 col-md-6 list-unstyled">
            <li>
              <h4>{{item.title}}</h4>
              <ul class="list-unstyled">
                {% for child in item.get_children %}
                  <li>
                    <a href="{{child.get_link}}" class="small">{{child.title}}</a>
                  </li>
                {% endfor %}
              </ul>
            </li>
          </ul>      
        {% endfor %}        
      </div>

      <div class="row">
        {% for item in footer_menu.get_items|slice(2, 4) %}
          <ul class="col-sm-12 col-md-6 list-unstyled">
            <li>
              <h4>{{item.title}}</h4>
              <ul class="list-unstyled">
                {% for child in item.get_children %}
                  <li>
                    <a href="{{child.get_link}}" class="small">{{child.title}}</a>
                  </li>
                {% endfor %}
              </ul>
            </li>
          </ul>      
        {% endfor %}        
      </div>
    </div>
    <div class='col-sm-12 col-sm-6 col-md-4'>
      <h3>Contactanos</h3>
      <form>
        <div class="form-group">
          <label for="exampleInputEmail1">Email:</label>
          <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Asunto</label>
          <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Escribe un asunto">
        </div>
        <div class="form-group">
          <textarea class="form-control" rows="3" placeholder="Dejanos un mensaje"></textarea>
        </div>
        <button type="submit" class="btn btn-default">Enviar</button>
      </form>
    </div>
  </div>
</div>
